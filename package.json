{
  "name": "lambda-rate-limiter",
  "description": "Simple in-memory rate-limit for Node.",
  "version": "0.0.0-development",
  "homepage": "https://github.com/blackflux/lambda-rate-limiter#readme",
  "license": "MIT",
  "author": "Lukas Siemon",
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/lambda-rate-limiter.git"
  },
  "bugs": {
    "url": "https://github.com/blackflux/lambda-rate-limiter/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/lambda-rate-limiter/blob/master/LICENSE"
    }
  ],
  "main": "lib/index.js",
  "engines": {
    "node": ">= 6.10.3"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "npm run clean && npm run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "npm run clean && npm run gardener && npm run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "npm run build-clean && npx semantic-release",
    "gardener": "node gardener"
  },
  "dependencies": {
    "lru-cache": "5.1.1"
  },
  "devDependencies": {
    "@babel/cli": "7.5.0",
    "@babel/core": "7.5.4",
    "@babel/plugin-proposal-object-rest-spread": "7.5.1",
    "@babel/register": "7.4.4",
    "@blackflux/eslint-plugin-rules": "1.0.21",
    "@blackflux/robo-config-plugin": "2.0.1",
    "babel-eslint": "10.0.2",
    "chai": "4.2.0",
    "coveralls": "3.0.4",
    "eslint": "6.0.1",
    "grunt": "1.0.4",
    "js-gardener": "2.0.43",
    "mocha": "6.1.4",
    "nyc": "14.1.1",
    "semantic-release": "15.13.18"
  },
  "keywords": [
    "ratelimit",
    "rate-limit",
    "rate",
    "limit",
    "attack",
    "flood",
    "security",
    "dos",
    "ddos",
    "lambda"
  ],
  "files": [
    "lib"
  ],
  "peerDependencies": {},
  "nyc": {
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  }
}
