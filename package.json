{
  "name": "lambda-rate-limiter",
  "description": "Simple in-memory rate-limit for Node.",
  "version": "0.0.0-development",
  "homepage": "https://github.com/simlu/lambda-rate-limiter",
  "license": "MIT",
  "author": {
    "name": "Lukas Siemon",
    "email": "git@blackflux.com",
    "url": "https://blackflux.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simlu/lambda-rate-limiter.git"
  },
  "bugs": {
    "url": "https://github.com/simlu/lambda-rate-limiter/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/simlu/lambda-rate-limiter/blob/master/LICENSE"
    }
  ],
  "main": "lib/limiter",
  "engines": {
    "node": ">= 6.10.3"
  },
  "scripts": {
    "test": "node gardener && nyc mocha --recursive",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "lru-cache": "4.1.2"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "coveralls": "3.0.0",
    "grunt": "1.0.2",
    "js-gardener": "1.15.0",
    "mocha": "5.0.5",
    "semantic-release": "15.1.5",
    "nyc": "11.6.0"
  },
  "keywords": [
    "ratelimit",
    "rate-limit",
    "rate",
    "limit",
    "attack",
    "flood",
    "security",
    "dos",
    "ddos",
    "lambda"
  ],
  "files": [
    "lib"
  ],
  "peerDependencies": {},
  "nyc": {
    "tempDirectory": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "flow-typed/*"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  }
}
