{
  "name": "lambda-rate-limiter",
  "description": "Simple in-memory rate-limit for Node.",
  "version": "0.0.0-development",
  "homepage": "https://github.com/blackflux/lambda-rate-limiter",
  "license": "MIT",
  "author": "Lukas Siemon",
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/lambda-rate-limiter.git"
  },
  "bugs": {
    "url": "https://github.com/blackflux/lambda-rate-limiter/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/lambda-rate-limiter/blob/master/LICENSE"
    }
  ],
  "main": "lib/limiter",
  "engines": {
    "node": ">= 6.10.3"
  },
  "scripts": {
    "test": "npm run clean && npm run gardener && npm run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "npm run build-artifact && npm run clean-build && npx semantic-release",
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --source-maps inline --copy-files --include-dotfiles",
    "clean-build": "npm run clean && npm run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "gardener": "node gardener",
    "build-artifact": "npm run clean-build && tar -zxvf $(npm pack) && rm *-0.0.0-development.tgz && cd package && tar -zcvf ../release.tar.gz . && cd .. && rm -rf package"
  },
  "dependencies": {
    "lru-cache": "5.1.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "coveralls": "3.0.3",
    "grunt": "1.0.3",
    "js-gardener": "1.37.3",
    "mocha": "6.0.1",
    "semantic-release": "15.13.3",
    "nyc": "13.3.0",
    "babel-eslint": "10.0.1",
    "@babel/register": "7.0.0",
    "@babel/core": "7.3.3",
    "@babel/cli": "7.2.3",
    "@babel/plugin-transform-flow-comments": "7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "7.3.2",
    "@babel/preset-flow": "7.0.0"
  },
  "keywords": [
    "ratelimit",
    "rate-limit",
    "rate",
    "limit",
    "attack",
    "flood",
    "security",
    "dos",
    "ddos",
    "lambda"
  ],
  "files": [
    "lib"
  ],
  "peerDependencies": {},
  "nyc": {
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "flow-typed/*",
      "lib/*"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  }
}
